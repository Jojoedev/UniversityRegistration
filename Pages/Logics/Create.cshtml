@model UniversityRegistration.Pages.Logics.CreateModel
@{
}

<form method="post" class="form-group">
    <div>
        <label asp-for="student.FirstName" class="label-control"></label>
        <input asp-for="student.FirstName" class="form-control" />
    </div>
        <div>
        <label asp-for="student.LastName" class="label-control"></label>
        <input asp-for="student.LastName" class="form-control" />
    </div>
    <div>
        <label asp-for="student.DateOfBirth" class="label-control"></label>
        <input asp-for="student.DateOfBirth" class="form-control" />
    </div>
    <div>
        <label asp-for="student.FacultyId" class="label-control"></label>
        <select asp-for="student.FacultyId" class="form-control"  asp-items="Model.faculties">
            <option>Select Faculty</option>
        </select>
    </div>
    <div>
        <label asp-for="student.DepartmentId" class="label-control"></label>
        <select asp-for="student.DepartmentId" class="form-control"  asp-items="Model.departments">
            <option>Select Department</option>
        </select>
    </div>
    <br />
    <div>
    <input type="submit" class="btn btn-primary" /> &nbsp;
     <a href="/Index" class="btn btn-primary">Index</a>
     </div>
</form>

